{
    "name": "runtime-check",
    "version": "0.1.0",
    "description": "Plugin for typescript for donig runtime validation of interfaces",
    "main": "build/main.js",
    "types": "./index.d.ts",
    "scripts": {
        "check": "npm run build -- --noEmit",
        "build": "tsc",
        "lint": "eslint --ext ts,tsx src",
        "watch": "npm run build -- --watch"
    },
    "author": "Jacob V. Gardner <jacob.v.gardner@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^12.0.8",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "eslint": "^6.0.1",
        "eslint-config-prettier": "^6.0.0",
        "husky": "^2.7.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "typescript": "^3.5.1"
    },
    "private": true,
    "dependencies": {
        "@types/colors": "^1.2.1",
        "@types/json-schema": "^7.0.3",
        "colors": "^1.3.3",
        "json-schema": "^0.2.3",
        "pjson": "^1.0.9",
        "ts-json-schema-generator": "^0.50.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
