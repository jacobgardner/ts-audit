{
    "name": "ts-audit",
    "version": "0.4.1",
    "description": "Plugin for typescript for doing runtime validation of interfaces",
    "main": "build/main.js",
    "types": "./index.d.ts",
    "files": [
        "build",
        "index.d.ts"
    ],
    "scripts": {
        "check": "npm run build -- --noEmit",
        "prebuild": "rimraf build",
        "build": "tsc",
        "prepublish": "npm run build",
        "lint:base": "eslint --ext ts,tsx",
        "lint:fix": "npm run lint:base -- --fix src tests",
        "lint": "npm run lint:base -- src tests",
        "watch": "npm run build -- --watch"
    },
    "author": "Jacob V. Gardner <jacob.v.gardner@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/colors": "^1.2.1",
        "@types/debug": "^4.1.4",
        "@types/json-schema": "^7.0.3",
        "@types/node": "^12.0.8",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "eslint": "^6.0.1",
        "eslint-config-prettier": "^6.0.0",
        "husky": "^2.7.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "rimraf": "^2.6.3",
        "ts-node": "^8.3.0",
        "ttypescript": "^1.5.7",
        "typescript": "^3.5.1"
    },
    "peerDependencies": {
        "typescript": ">3.0"
    },
    "dependencies": {
        "ajv": "^6.10.0",
        "colors": "^1.3.3",
        "debug": "^4.1.1",
        "json-schema": "^0.2.3",
        "pjson": "^1.0.9",
        "ts-json-schema-generator": "^0.50.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
